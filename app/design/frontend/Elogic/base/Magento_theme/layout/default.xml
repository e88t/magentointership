<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <!-- Header -->
    <referenceBlock name="top.links"  remove="true"/>
    <referenceContainer name="header.container">
        <container name="header.left" label="headerLeft" htmlId="div" htmlClass="left.col"/>
        <container name="header.center" label="headerCenter" htmlId="div" htmlClass="center.col"/>
        <container name="header.right" label="headerRight" htmlId="div" htmlClass="right.col"/>
    </referenceContainer>
    <!-- Move -->
    <move element="logo" destination="header.center" />
    <move element="top.search" destination="header.left" />
    <move element="minicart" destination="header.right" />
</page>
